        { "label": "SaaS / Tech", "value": "saas" },
        { "label": "Agency / Services", "value": "agency" },
        { "label": "Healthcare", "value": "healthcare" },
        { "label": "Consulting", "value": "consulting" },
        { "label": "Retail / eCommerce", "value": "retail" },
        { "label": "Custom", "value": "custom" }
      ]
